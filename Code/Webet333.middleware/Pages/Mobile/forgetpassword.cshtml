    $(document).ready(function () {
        $(".navbar-toggle,.canvas-overlay").click(function () {
            if (!$("html").hasClass('intro')) $("html").addClass("intro");
            else $("html").removeClass("intro");
        });
        $(".canvas-overlay").click(function () {
            if ($(".navbar-collapse").hasClass('in')) $(".navbar-collapse").removeClass("in");
        });
    });
