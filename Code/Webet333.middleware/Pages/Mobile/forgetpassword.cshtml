<!-- Slider Section End -->
<script>
    $(window).scroll(function () {
        var scroll = $(window).scrollTop();
        if (scroll >= 1) $("header").addClass("sticky-header");
        else $("header").removeClass("sticky-header");
    });
</script>

<script>
    function language(value) {
        SetLocalStorage('language', value);
        get();
    }

    function get() {
        (GetLocalStorage('language') === null) ? SetLocalStorage('language', 'en-US') : false;

        $.ajax({
            url: '../../resources/strings.' + GetLocalStorage('language') + '.json',
            dataType: 'json',
            async: false,
            success: function (lang) {
                $('.lang').each(function (index, element) {
                    if (localStorage.getItem("language") === "ms-MY") $('body').addClass('malay-font');
                    $(this).text(lang[$(this).attr('key')]);
                });
                $("[data-translate]").each(function () {
                    if ($(this).is("input")) $(this).attr('placeholder', lang[$(this).data("translate")]);
                    else $(this).text(lang[$(this).data("translate")]);
                });
            }
        });
        //announcementMobile();
    }

    setTimeout(() => { get(); }, 200);
</script>
