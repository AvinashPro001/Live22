
@{
    ViewData["Title"] = "PaymentStatus";
}

<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

    <style>
        .img-logo {
            width: inherit
        }

        .div-border {
            border: orange;
            border-style: double;
            border-width: 5px;
            border-radius: 15px;
            margin-top: 50px;
            margin-bottom: 50px;
        }

        .text-green {
            color: #32CD32;
        }

        .text-red {
            color: red;
        }
    </style>
</head>
<body>

    @if (ViewData["status"].ToString() == "accept")
    {

        <div class="container div-border" id="acceptPayment" style="display:none;">
            <div class="row">
                <div class="col col-lg-12 text-center">
                    <img class="img-logo" src="~/images/webet-main-logo.png" />
                </div>
            </div>
            <div class="row">
                <div class="col col-lg-12 text-center">
                    <h1 class="text-green">Thanks You</h1>
                </div>
            </div>
            <div class="row">
                <div class="col col-lg-12 text-center">
                    <h3 class="text-green">Your Transaction is Succesfully</h3>
                </div>
            </div>

            @*<div class="row">
                    <div class="col col-lg-12 text-center">
                        <h3 id="accepttranId">Transaction Id: dd495246-5f02-41c3-9fba-45e93941b80b</h3>
                    </div>
                </div>*@

            <div class="row">
                <div class="col col-lg-12 text-center">
                    <img src="~/images/success-payment.gif" />
                </div>
            </div>

            <div class="row">
                <div class="col col-lg-12 text-center">
                    <a href="../" class="btn btn-primary">Go to Web</a>
                </div>
            </div>
            <br />
        </div>

        <script>
            document.getElementById("acceptPayment").style.display = "";
        </script>

    }
    @if (ViewData["status"].ToString() == "reject")
    {

        <div class="container div-border" id="rejectPayment" style="display:none;">
            <div class="row">
                <div class="col col-lg-12 text-center">
                    <img class="img-logo" src="~/images/webet-main-logo.png" />
                </div>
            </div>
            <div class="row">
                <div class="col col-lg-12 text-center">
                    <h1 class="text-red">Opps Something is Wrong</h1>
                </div>
            </div>
            <div class="row">
                <div class="col col-lg-12 text-center">
                    <h3 class="text-red">Your Transaction is Rejected</h3>
                </div>
            </div>

            @*<div class="row">
                    <div class="col col-lg-12 text-center">
                        <h3 id="rejectTransId">Transaction Id: dd495246-5f02-41c3-9fba-45e93941b80b</h3>
                    </div>
                </div>*@

            <div class="row">
                <div class="col col-lg-12 text-center">
                    <img style="width:50%;" src="~/images/error-payment.gif" />
                </div>
            </div>

            <div class="row">
                <div class="col col-lg-12 text-center">
                    <a href="../" class="btn btn-primary">Go to Web</a>
                </div>
            </div>
            <br />
        </div>

        <script>
            document.getElementById("rejectPayment").style.display = "";
        </script>

    }


    <script>
        var url_string = window.location;
        var url = new URL(url_string);
        var paymentUrl = url.searchParams.get("url");
        var status = url.searchParams.get("status");
        var id = url.searchParams.get("id");
        if (paymentUrl != null)
            window.open(paymentUrl, '_self');
        if (status != null) {
            setTimeout(() => {
                window.location.href = "./"
            }, 3000);
        }
    </script>
</body>
</html>
